<!-- for reference only -- <h1>Places</h1>  can use here or in the application view-->

<% if @current_user %>
<div class="row">
     <div class="col-sm-9">
        <h2>Places</h2>
      </div>
      <div class="col-sm-3 text-end">
        <a href="/places/new/" class="btn btn-primary">New Place</a>
      </div>
    </div>
<ul class="mt-4">
  <% for place in @places %>
    <li><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
  <% end %>
</ul>

<% else %>
You must first <a href="/login">login</a> to post. 
<% end %>