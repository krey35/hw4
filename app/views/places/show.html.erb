<h1 class="mb-4"><%= @place["name"] %></h1>

<h2 class="mb-4">My Posts</h2>
<a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
  
  <div class="row">
<% for post in @posts %>
  <div class="col-md-4 col-sm-6">
  <h4 class="mt-4"><%= post["title"] %></h4>
  <h6><%= post["posted_on"] %></h6>

<% if post.uploaded_image.attached? %>
  <img width="200px" src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
    <% else %>
    No Image
<% end %>

  <p class="text-break"><%= post["description"] %></p>
  </div>
<% end %>
  </div>
  
<p class="mt-4">
  <a href="/places">Back to All Places</a>
</p>

</div>