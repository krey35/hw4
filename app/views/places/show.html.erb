<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>
  <div class="row">
<% for post in @posts %>
  <div class="col-md-4 col-sm-6 col-xs-12">
  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>

<% if post.uploaded_image.attached? %>
  <img width="200px" src="<% url_for(post.uploaded_image) %>" class="img-fluid">
    <% else %>
    No Image
<% end %>

  <p><%= post["description"] %></p>
  </div>
<% end %>
   </div>
  
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-sucess">New Post</a>

